#!/usr/bin/env ruby

def system!(...)
  system(...) or abort
end

Dir.chdir File.expand_path "#{__dir__}/.."

system! "bundle exec middleman build --clean --verbose --no-parallel --bail --watcher-disable"

Dir.chdir 'docs' do
  system! "git fetch"
  system! "git reset --hard origin/gh-pages"
end

require 'fileutils'
FileUtils.cp_r 'docs', 'build/docs'

