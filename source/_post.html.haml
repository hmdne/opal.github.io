%article.blog-post
  %header
    %h2.blog-post-title
      %a(href="#{article.url}")
        = article.title
    .blog-post-meta
      = "Posted by #{article.author}"
      %br
      = Date.parse(article.date.to_s).strftime '%B %d, %Y'


  .blog-post-body
    = preserve do
      = article.body
